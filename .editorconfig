# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{c,h}]
indent_style = space
indent_size = 3

[*.yml]
indent_style = space
indent_size = 2

[Makefile*]
indent_style = tab
indent_size = 8

[configure.ac]
indent_style = space
indent_size = 4
